@page
@model ScheduleVaccineRazor.Pages.Home.ChildrenProfileModel
@{
    ViewData["Title"] = "Children Profiles Management";
}

<div class="container">
    <!-- Add Profile Card -->
    <div class="card shadow-lg mb-5">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">
                <i class="bi bi-person-plus me-2"></i>Add New Child Profile
            </h3>
        </div>
        <div class="card-body">
            <form method="post" class="row g-4">
                <!-- Các trường input giữ nguyên -->
                <div class="col-md-4">
                    <label class="form-label">
                        <i class="bi bi-person-badge me-2"></i>Full Name
                    </label>
                    <input asp-for="NewProfile.FullName" class="form-control" required />
                </div>

                <div class="col-md-3">
                    <label class="form-label">
                        <i class="bi bi-calendar-event me-2"></i>Birth Date
                    </label>
                    <input asp-for="NewProfile.BirthDate" type="date" class="form-control" required />
                </div>

                <div class="col-md-3">
                    <label class="form-label">
                        <i class="bi bi-gender-ambiguous me-2"></i>Gender
                    </label>
                    <select asp-for="NewProfile.Gender" class="form-select">
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                </div>

                <input type="hidden" asp-for="NewProfile.ParentId" />

                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" asp-page-handler="Add" class="btn btn-primary w-100">
                        <i class="bi bi-save me-2"></i>Add
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Profiles Table -->
    <div class="card shadow">
        <div class="card-header bg-light">
            <h4 class="card-title mb-0">
                <i class="bi bi-people-fill me-2"></i>Children Profiles List
            </h4>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th><i class="bi bi-person me-2"></i>Full Name</th>
                            <th><i class="bi bi-calendar me-2"></i>Birth Date</th>
                            <th><i class="bi bi-gender-ambiguous me-2"></i>Gender</th>
                            <th>Actions</th> <!-- Phần cần sửa -->
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var profile in Model.ChildrenProfiles)
                        {
                            <tr>
                                <td>@profile.FullName</td>
                                <td>@profile.BirthDate.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <span class="badge @(profile.Gender == "Male" ? "bg-primary" : "bg-pink")">
                                        @profile.Gender
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <!-- Nút Update -->
                                        <a asp-page="/Home/UpdateChildrenProfile"
                                           asp-route-id="@profile.Id"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil-square me-1"></i>Edit
                                        </a>

                                        <!-- Nút Delete -->
                                        <form method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@profile.Id" />
                                            <button type="submit"
                                                    asp-page-handler="Delete"
                                                    class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash me-1"></i>Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="mt-5 py-4 text-muted border-top">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center text-md-start">
                    © 2025 - ScheduleVaccineRazor - [Piazzo]
                </div>
                <div class="col-md-6 text-center text-md-end">
                    Support +1:800-123-4567 | Email: support@vaccine.org
                </div>
            </div>
        </div>
    </footer>
</div>

<style>
    .bg-pink {
        background-color: #ff69b4 !important;
        color: white;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }

    .card {
        border-radius: 1rem;
        border: none;
    }

    .btn-sm {
        padding: 0.375rem 0.75rem;
        font-size: 0.875rem;
    }

    .d-flex.gap-2 {
        gap: 0.5rem !important;
    }
</style>
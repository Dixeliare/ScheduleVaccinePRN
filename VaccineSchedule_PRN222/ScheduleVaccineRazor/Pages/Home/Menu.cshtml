@page
@model ScheduleVaccineRazor.Pages.Home.MenuModel
@{
    ViewData["Title"] = "Vaccination Management";
    var errorMessage = TempData["ErrorMessage"] as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container">
            <a class="navbar-brand" asp-page="/Home/Index">
                <i class="bi bi-shield-plus me-2"></i>Vaccine System
            </a>

            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Home/ScheduleIndex">
                            <i class="bi bi-calendar-check me-1"></i>Schedule
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Home/Profile">
                            <i class="bi bi-person-circle me-1"></i>Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Home/ChildrenProfile">
                            <i class="bi bi-people-fill me-1"></i>Children
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container my-5">
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                @errorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 shadow">
                    <div class="card-body text-center">
                        <i class="bi bi-calendar2-check fs-1 text-primary mb-3"></i>
                        <h3 class="card-title">Schedule</h3>
                        <p class="card-text">Manage vaccination schedules</p>
                        <a asp-page="/Home/ScheduleIndex" class="btn btn-primary">
                            Go to Schedule <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 shadow">
                    <div class="card-body text-center">
                        <i class="bi bi-person-circle fs-1 text-primary mb-3"></i>
                        <h3 class="card-title">Profile</h3>
                        <p class="card-text">Update personal information</p>
                        <a asp-page="/Home/Profile" class="btn btn-primary">
                            Go to Profile <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 shadow">
                    <div class="card-body text-center">
                        <i class="bi bi-people-fill fs-1 text-primary mb-3"></i>
                        <h3 class="card-title">Children</h3>
                        <p class="card-text">Manage children's profiles</p>
                        <a asp-page="/Home/ChildrenProfile" class="btn btn-primary">
                            Manage Children <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Required Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        .card {
            transition: transform 0.2s;
            border: none;
            border-radius: 15px;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        .nav-link {
            border-radius: 8px;
            margin: 0 5px;
            transition: all 0.2s;
        }

            .nav-link:hover {
                background: rgba(255,255,255,0.1);
            }
    </style>
</body>
</html>
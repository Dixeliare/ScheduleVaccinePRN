@page
@model ScheduleVaccineRazor.Pages.Home.ScheduleIndexModel

@{
    ViewData["Title"] = "ScheduleIndex";
}

<h1>ScheduleIndex</h1>

<p>
    <a asp-page="/Home/CreateSchedule">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Schedule[0].AppointmentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Schedule[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Schedule[0].Child)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Schedule[0].Vaccine)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Schedule) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Child.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vaccine.Name)
            </td>
        </tr>
}
    </tbody>
</table>

@page
@model ScheduleVaccineRazor.Pages.Accounts.LoginModel
@{
    ViewData["Title"] = "Vaccination System Login";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center min-vh-100 align-items-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title text-center mb-0">
                        <i class="bi bi-shield-lock-fill me-2"></i>VACCINATION SYSTEM LOGIN
                    </h3>
                </div>

                <div class="card-body p-4">
                    @if (Model.LoginFailed)
                    {
                        <div class="alert alert-danger d-flex align-items-center" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <div>Invalid email or password!</div>
                        </div>
                    }

                    <form method="post" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">
                                <i class="bi bi-envelope-fill me-2 text-primary"></i>Email Address
                            </label>
                            <input asp-for="Input.Email" class="form-control form-control-lg"
                                   placeholder="Enter your email" required>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Input.PasswordHash" class="form-label">
                                <i class="bi bi-key-fill me-2 text-primary"></i>Password
                            </label>
                            <input asp-for="Input.PasswordHash" type="password"
                                   class="form-control form-control-lg"
                                   placeholder="Enter password" required>
                            <span asp-validation-for="Input.PasswordHash" class="text-danger small"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                            </button>
                        </div>

                        <div class="text-center">
                            <a href="#" class="text-decoration-none small">
                                <i class="bi bi-question-circle me-1"></i>Forgot password?
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 1rem;
        overflow: hidden;
        border: none;
    }

    .form-control-lg {
        border-radius: 0.5rem;
        padding: 1rem;
    }

    .btn-lg {
        border-radius: 0.5rem;
        padding: 1rem 1.5rem;
        font-weight: 600;
    }

    .alert {
        border-radius: 0.5rem;
    }
</style>
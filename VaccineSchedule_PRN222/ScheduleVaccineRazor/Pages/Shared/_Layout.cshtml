<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ScheduleVaccineRazor</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ScheduleVaccineRazor.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container">
                <a class="navbar-brand" asp-page="/Home/Index">
                    <i class="bi bi-heart-pulse-fill me-2"></i>
                    Vaccine Scheduler
                </a>

                <!-- Thêm nút toggle -->
                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Sửa cấu trúc menu -->
                <div class="collapse navbar-collapse" id="mainNav">
                    <div class="navbar-nav ms-auto">
                        <a class="nav-link" asp-page="/Home/ScheduleIndex">
                            <i class="bi bi-calendar-check me-1"></i>Schedule
                        </a>
                        <a class="nav-link" asp-page="/Home/Profile">
                            <i class="bi bi-person-circle me-1"></i>Profile
                        </a>
                        <a class="nav-link" asp-page="/Home/ChildrenProfile">
                            <i class="bi bi-people-fill me-1"></i>Your Children
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container my-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bg-light text-muted py-4">
        <div class="container text-center">
            <p class="mb-0">© 2025 - ScheduleVaccineRazor - <a asp-area="" asp-page="/Privacy">Privacy</a></p>
            <p class="small">Support: +1-800-123-4567 | Email: support@vaccine.org</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>